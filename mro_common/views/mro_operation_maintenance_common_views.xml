<openerp>
<data>
<record id="mro_operation_maintenance_common_view_search" model="ir.ui.view">
    <field name="name">mro.operation_maintenance_common form</field>
    <field name="model">mro.operation_maintenance_common</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="company_id" groups="base.group_multi_company"/>
            <field name="operation_id"/>
            <field name="mro_object_id"/>
            <field name="type_id"/>
            <field name="user_id"/>
            <group name="group_state" string="State">
                <filter name="dom_draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="dom_confirm" string="Ready To Start" domain="[('state','=','confirm')]"/>
                <filter name="dom_open" string="In Progress" domain="[('state','=','open')]"/>
                <filter name="dom_done" string="Done" domain="[('state','=','done')]"/>
                <filter name="dom_cancel" string="Cancel" domain="[('state','=','cancel')]"/>
            </group>
            <group name="group_main" string="Group By..">
                <filter name="grp_company" string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                <filter name="grp_operation" string="# MRO Operation" context="{'group_by':'operation_id'}"/>
                <filter name="grp_object" string="Object" context="{'group_by':'mro_object_id'}"/>
                <filter name="grp_type" string="Maintenance Type" context="{'group_by':'type_id'}"/>
                <filter name="grp_user" string="Responsible" context="{'group_by':'user_id'}"/>
                <filter name="grp_state" string="State" context="{'group_by':'state'}"/>
            </group>
        </search>
    </field>
</record>

<record id="mro_operation_maintenance_common_view_tree" model="ir.ui.view">
    <field name="name">mro.operation_maintenance_common tree</field>
    <field name="model">mro.operation_maintenance_common</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="company_id" groups="base.group_multi_company"/>
            <field name="mro_object_id"/>
            <field name="scheduled_date_start"/>
            <field name="scheduled_date_end"/>
            <field name="real_date_start"/>
            <field name="real_date_end"/>
            <field name="type_id"/>
            <field name="operation_id"/>
            <field name="user_id"/>
            <field name="state"/>
        </tree>
    </field>
</record>

<record id="mro_operation_maintenance_common_view_calendar" model="ir.ui.view">
    <field name="name">mro.operation_maintenance_common calendar</field>
    <field name="model">mro.operation_maintenance_common</field>
    <field name="arch" type="xml">
        <calendar date_start="scheduled_date_start" date_stop="scheduled_date_end" color="mro_object_id">
            <field name="name"/>
            <field name="type_id"/>
        </calendar>
    </field>
</record>

<record id="mro_operation_maintenance_common_view_form" model="ir.ui.view">
    <field name="name">mro.operation_maintenance_common form</field>
    <field name="model">mro.operation_maintenance_common</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" states="draft" confirm="Confirm MRO maintenance. Are you sure?"/>
                <button name="action_start" type="object" string="Start" class="oe_highlight" attrs="{'invisible':['|',('state','!=','confirm'),('start_ok','=',False)]}" confirm="Start MRO maintenance. Are you sure?"/>
                <button name="action_done" type="object" string="Finish" class="oe_highlight" attrs="{'invisible':['|',('state','!=','open'),('done_ok','=',False)]}" confirm="Finish MRO maintenance. Are you sure?"/>
                <button name="%(base_print_policy.base_print_document_action)d" string="Print" type="action" icon="gtk-print"/>
                <button name="%(base_cancel_reason.base_cancel_reason_wizard_action)d" type="action" string="Cancel" attrs="{'invisible':['|',('state','=','cancel'),('cancel_ok','=',False)]}" confirm="Cancel MRO maintenance. Are you sure?"/>
                <button name="action_restart" type="object" string="Restart" attrs="{'invisible':['|',('state','!=','cancel'),('restart_ok','=',False)]}" confirm="Restart MRO maintenance. Are you sure?"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve,open"/>
            </header>
            <sheet>
                <div class="oe_right oe_button_box" style="width: 300px;" name="buttons">
                </div>
                <div class="oe_left" style="width: 500px;">
                    <div class="oe_title" style="width: 500px;">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2 attrs="{'invisible': [('state', '!=', 'cancel')]}">
                            <label for="cancel_reason_id" string="Cancellation reason:"/>
                            <field name="cancel_reason_id" class="oe_inline"/>
                        </h2>
                    </div>
                </div>
                <group name="group_1" colspan="4" col="2">
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="operation_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="allowed_mro_object_ids" widget="many2many_tags" invisible="1"/>
                        <field name="mro_object_id" domain="[('id','in',allowed_mro_object_ids[0][2])]"/>
                        <field name="operation_state" invisible="1"/>
                        <field name="type_id"/>
                        <field name="kind"/>
                        <field name="user_id"/>
                    </group>
                    <group name="group_1_2">
                        <field name="scheduled_date_start"/>
                        <field name="scheduled_date_end"/>
                        <field name="real_date_start"/>
                        <field name="real_date_end"/>
                    </group>
                </group>
                <notebook colspan="4">
                    <page name="note" string="Notes">
                        <field name="note"/>
                    </page>
                    <page name="policy" string="Policies"  groups="base.group_system">
                        <group name="policy_1" colspan="4" col="2">
                            <field name="start_ok"/>
                            <field name="done_ok"/>
                            <field name="cancel_ok"/>
                            <field name="restart_ok"/>
                        </group>
                    </page>
                    <page name="log" string="Logs"  groups="base.group_system">
                        <group name="group_5" colspan="4" col="3">
                            <group name="group_log_1" colspan="4" col="3">
                                <field name="start_date" string="Start"/>
                                <field name="start_user_id" nolabel="1"/>
                                <field name="done_date" string="Finish"/>
                                <field name="done_user_id" nolabel="1"/>
                                <field name="cancel_date" string="Cancellation"/>
                                <field name="cancel_user_id" nolabel="1"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
</record>

</data>
</openerp>
